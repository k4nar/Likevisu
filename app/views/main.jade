#layout
  .pure-g-r
    header#header.pure-u-1
      h1
        div.pure-form
          label Evolution of the development of the Linux Kernel between versions
            select(ng-model="start", ng-options="v for v in versions | limitTo:start_bound")
          label and
            select(ng-model="stop", ng-options="v for v in versions | limitTo:stop_bound")

    #charts.pure-u-1

      .pure-g-r
        .pure-u-1-3
          .pure-g-r
            .pure-u-1
              h2.pure-form Top companies by
                select(ng-model="top_by", ng-init="options = ['lines', 'commits']", ng-options="e for e in options")
              top-chart(data='top_companies')
              hr
            .pure-u-1
              h2.pure-form Top authors by
                select(ng-model="top_by", ng-init="options = ['lines', 'commits']", ng-options="e for e in options")
              top-chart(data='top_authors')

        .pure-u-1-3
          .pure-g-r
            .pure-u-1
              h2 Lines added and deleted by release :
              line-chart(data='diffs', interpolate='step')
              hr
            .pure-u-1
              h2 Commits number by release :
              line-chart(data='commits_evolution', interpolate='monotone')
              hr
            .pure-u-1
              h2 Authors number by release :
              line-chart(data='authors_evolution', interpolate='monotone')

        .pure-u-1-3
          .pure-g-r
            .pure-u-1
              h2 Commits activity by day :
              calendar.calendar(data='commits_by_date', boundaries='commits_by_date_boundaries')


